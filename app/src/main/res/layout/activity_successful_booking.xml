<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ng.hotels.android.app.ui.activities.SuccessfulBookingActivity"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <ImageView
        android:layout_width="215dp"
        android:layout_height="172dp"
        android:id="@+id/success"
        android:background="@drawable/succes"
       android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="223dp"
        android:layout_height="50dp"
        android:textColor="#828282"
        android:layout_gravity="center_horizontal"
        android:text="Your hotel booking was successful.\nThank you for using hotels.ng"
        android:textAlignment="center"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="124dp"
        android:layout_height="62dp"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="#64C073"
        android:elevation="20dp"
        android:text="Ok"
        android:layout_gravity="center_horizontal"

        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/share"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/facebook"
                android:background="@drawable/facebook"/>
            <View
                android:layout_width="30dp"
                android:layout_height="0dp" />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/twitter"
                android:background="@drawable/twitter"/>
            <View
                android:layout_width="30dp"
                android:layout_height="0dp" />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/instagram"
                android:background="@drawable/instagram"/>

        </LinearLayout>

    </FrameLayout>



</LinearLayout>
