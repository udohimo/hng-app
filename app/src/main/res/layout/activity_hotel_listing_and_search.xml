<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ng.hotels.android.app.ui.activities.HotelListingAndSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/sort_filter"
            android:drawableLeft="@drawable/sort_filter"
            android:drawablePadding="12dp"
            android:textSize="20sp"
            android:textColor="@color/textDark"
            android:elevation="4dp"
            android:text="Sort &amp; Filter"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:background="@color/recycler_background"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/listing_search_list_item"/>

</android.support.constraint.ConstraintLayout>
