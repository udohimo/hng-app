<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ng.hotels.android.app.ui.activities.LoyaltyCoinActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F4F4F4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:background="#3D9EE3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|fill_horizontal"
                android:layout_marginBottom="8dp"
                android:fontFamily="Lato"
                android:gravity="center_horizontal"
                android:text="@string/lc_title"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="139dp"
                android:layout_height="139dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:src="@drawable/profile"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|fill_horizontal"
                android:layout_marginBottom="8dp"
                android:fontFamily="Lato"
                android:gravity="center_horizontal"
                android:text="@string/profile_name"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F4F4F4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|fill_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="14dp"
                android:fontFamily="Lato"
                android:gravity="center_horizontal"
                android:text="@string/title_name_loyalty"
                android:textColor="#1879BE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#66C4C4C4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:orientation="horizontal"
                android:background="#F4F4F4">

                <ImageView
                    android:id="@+id/loyalty_wallet"
                    android:layout_width="190dp"
                    android:layout_height="163dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/wallet" />

                <TextView
                    android:id="@+id/loyalty_balance"
                    android:layout_width="159dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="lato"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/loyalty_balance"
                    android:textColor="#4F4F4F"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="116dp"
                android:layout_margin="15dp"
                android:background="#F2F2F2"
                android:elevation="5dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="116dp"
                    android:background="#f2f2f2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/lc_logo"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_lc" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="Lato"
                            android:text="@string/gain"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/vector_4"
                            android:layout_width="8dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="150dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="23dp"
                        android:background="#66C4C4C4" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_lc" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="Lato"
                            android:text="@string/used"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="150dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:layout_margin="15dp"
                android:layout_marginTop="35dp"
                android:background="#F2F2F2"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="400dp"
                    android:background="#f2f2f2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="89dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="Lato"
                        android:text="@string/history"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="23dp"
                        android:background="#66C4C4C4" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_used" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="Lato"
                            android:text="@string/_1000lc"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="125dp"
                            android:fontFamily="Lato"
                            android:text="@string/pending"
                            android:textColor="#BDBDBD"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="23dp"
                        android:background="#66C4C4C4" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_used" />

                        <TextView
                            android:layout_width="123dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="Lato"
                            android:text="@string/coins_used"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="75dp"
                            android:fontFamily="Lato"
                            android:text="@string/_5hours_ago"
                            android:textColor="#BDBDBD"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="23dp"
                        android:background="#66C4C4C4" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_gained" />

                        <TextView
                            android:layout_width="123dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="Lato"
                            android:text="@string/coins_gained"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="75dp"
                            android:fontFamily="Lato"
                            android:text="@string/_5hours_ago"
                            android:textColor="#BDBDBD"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="23dp"
                        android:background="#66C4C4C4" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">


                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_gained" />

                        <TextView
                            android:layout_width="123dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="Lato"
                            android:text="@string/coins_gained"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="75dp"
                            android:fontFamily="Lato"
                            android:text="@string/_5hours_ago"
                            android:textColor="#BDBDBD"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="23dp"
                        android:background="#66C4C4C4" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">


                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_gained" />

                        <TextView
                            android:layout_width="123dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="Lato"
                            android:text="@string/coins_gained"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="75dp"
                            android:fontFamily="Lato"
                            android:text="@string/_5hours_ago"
                            android:textColor="#BDBDBD"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="23dp"
                        android:background="#66C4C4C4" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">


                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="31dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_gained" />

                        <TextView
                            android:layout_width="123dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="Lato"
                            android:text="@string/coins_gained"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="89dp"
                            android:layout_height="29dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="75dp"
                            android:fontFamily="Lato"
                            android:text="@string/_5hours_ago"
                            android:textColor="#BDBDBD"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>




    </LinearLayout>







</ScrollView>

